<body>
    <form>
        <div class="row" style="padding-bottom:0;">
            <h4>Personal Information</h4>
        </div>
        <div class="container" style="margin:1%; border:medium groove; border-radius:10px">
            <div style="display:flex;padding-bottom:18px;width:450px;padding-top:18px">
                <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                    Title<br />
                    <select class="form-control" id="title">
                        <option>Mr</option>
                        <option>Mrs</option>
                    </select>
                </div>

                <div style="margin-left:1%;margin-right:0;width:49%;">
                    Date of birth<br />
                    <input type='date' class="form-control" id='datetimepicker4' />
                </div>
            </div>

            <div style="display: flex; padding-bottom: 18px; width: 450px;">
                <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                    First name<br />
                    <input type="text" id="firstname" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 0; width: 49%;">
                    Last name<br />
                    <input type="text" id="lastname" name="data_2" style="width: 100%;" class="form-control" />
                </div>

            </div>

            <div class="container" style="padding-bottom:18px">
                <div>
                    <label style="width: 100%">Gender</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline1">Female</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline2">Male</label>
                </div>
            </div>

        </div>


        <div class="row" style="padding-bottom: 0;padding-top:20px">
            <h4>Contact Information</h4>
        </div>
        <div class="container" style="border:medium groove; border-radius:10px;margin:1%; padding-top:1%">

            <div style="display: flex; padding-bottom: 18px; width: 450px;">
                <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                    Email address<br />
                    <input type="email" id="email" style="width: 100%;" aria-describedby="emailHelp" placeholder="Enter email" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 0; width: 49%;">
                    Phone<br />
                    <input type="number" id="lastname" name="data_2" style="width: 100%;" class="form-control" />
                </div>

            </div>
            <div style="display: flex; padding-bottom: 18px; width: 650px;">

                <div style="margin-left: 0; margin-right: 1px; width: 220px; padding-top: -18px">
                    Web address<br />
                    <input type="url" id="webaddress" style="width: 100%" ; placeholder="Enter address" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                    Facebook<br />
                    <input type="url" id="facebook" style="width: 100%" ; placeholder="Enter address" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                    Instagram<br />
                    <input type="url" id="instagram" style="width: 100%" ; placeholder="Enter address" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                    Twitter<br />
                    <input type="url" id="Twitter" style="width: 100%" ; placeholder="Enter address" class="form-control" />
                </div>

            </div>


        </div>
        <div class="row" style="padding-bottom: 0;padding-top:20px">
            <h4>Location</h4>
        </div>
        <div class="container" style="border:medium groove; border-radius:10px;margin:1%; padding-top:1%">
            <div style="display: flex; padding-bottom: 18px; width: 450px;">
                <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                    Address 1<br />
                    <input type="text" id="firstname" class="form-control" />
                </div>

                <div style="margin-left: 1%; margin-right: 0; width: 49%;">
                    Address 2<br />
                    <input type="text" id="lastname" name="data_2" style="width: 100%;" class="form-control" />
                </div>

            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Submit</button>
    </form>
</body>

