<body>
    <form action="SaveEmployeeInformation" method="post">
        <div class="container">
            <div class="row" style="padding-bottom:0;">
                <h4 id="heading">Personal Information</h4>
            </div>
            <div class="container" style="margin:1%; border:medium groove; border-radius:10px">
                <div id="inputLabel" style="display:flex;padding-bottom:18px;width:450px;padding-top:18px">
                    <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                        Title<br />
                        <select style="background-color:lightgrey" name="title" class="form-control" id="title">
                            <option>Mr</option>
                            <option>Mrs</option>
                        </select>
                    </div>

                    <div style="margin-left:1%;margin-right:0;width:49%;">
                        Date of birth<br />
                        <input style="background-color:lightgrey" type='date' name="dateOfBirth" class="form-control" id='datetimepicker' />
                    </div>
                </div>

                <div id="inputLabel" style="display: flex; padding-bottom: 18px; width: 450px;">
                    <div style="margin-left: 0; margin-right: 1%; width: 49%;">
                        First name<br />
                        <input style="background-color:lightgrey" type="text" name="firstName" id="firstname" class="form-control" />
                    </div>

                    <div style="margin-left: 1%; margin-right: 0; width: 49%;">
                        Last name<br />
                        <input style="background-color:lightgrey;width:100%" type="text" id="lastname" name="lastName" class="form-control" />
                    </div>

                </div>

                <div class="container" style="padding-bottom:18px">
                    <div>
                        <label id="heading" style="width: 100%">Gender</label>
                    </div>
                    <div id="heading" class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline1" name="gender" value="Female" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline1">Female</label>
                    </div>
                    <div id="heading" class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline2" name="gender" value="Male" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline2">Male</label>
                    </div>
                </div>

            </div>


            <div class="row" style="padding-bottom: 0;padding-top:20px">
                <h4 id="heading">Contact Information</h4>
            </div>
            <div class="container" style="border:medium groove; border-radius:10px;margin:1%; padding-top:1%">

                <div style="display: flex; padding-bottom: 18px; width: 450px;">
                    <div id="inputLabel" style="margin-left: 0; margin-right: 1%; width: 49%;">
                        Email address<br />
                        <input style="background-color:lightgrey;width:100%" type="email" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email" class="form-control" />
                    </div>

                    <div id="inputLabel" style="margin-left: 1%; margin-right: 0; width: 49%;">
                        Phone<br />
                        <input style="background-color:lightgrey;width:100%" type="number" id="lastname" name="phone" class="form-control" />
                    </div>

                </div>
                <div style="display: flex; padding-bottom: 18px; width: 650px;">

                    <div id="inputLabel" style="margin-left: 0; margin-right: 1px; width: 220px; padding-top: -18px">
                        Web address<br />
                        <input type="url" id="webaddress" name="webAddress" style="width: 100%;background-color:lightgrey" ; placeholder="Enter address" class="form-control" />
                    </div>

                    <div id="inputLabel" style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                        Facebook<br />
                        <input type="url" id="facebook" name="facebook" style="width: 100%;background-color:lightgrey;" ; placeholder="Enter address" class="form-control" />
                    </div>

                    <div id="inputLabel" style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                        Instagram<br />
                        <input type="url" id="instagram" name="instagram" style="width: 100%;background-color:lightgrey" ; placeholder="Enter address" class="form-control" />
                    </div>

                    <div id="inputLabel" style="margin-left: 1%; margin-right: 1px; width: 220px; padding-top: -18px">
                        Twitter<br />
                        <input type="url" id="Twitter" name="twitter" style="width: 100%;background-color:lightgrey" ; placeholder="Enter address" class="form-control" />
                    </div>

                </div>


            </div>
            <div class="row" style="padding-bottom: 0;padding-top:20px">
                <h4 id="heading">Location</h4>
            </div>
            <div class="container" style="border:medium groove; border-radius:10px;margin:1%; padding-top:1%">
                <div style="display: flex; padding-bottom: 18px; width: 450px;">
                    <div id="inputLabel" style="margin-left: 0; margin-right: 1%; width: 49%;">
                        Address 1<br />
                        <input style="background-color:lightgrey;width:100%" name="address1" type="text" class="form-control" />
                    </div>

                    <div id="inputLabel" style="margin-left: 1%; margin-right: 0; width: 49%;">
                        Address 2<br />
                        <input style="background-color:lightgrey;width:100%" type="text" name="address2" class="form-control" />
                    </div>

                </div>
            </div>

            <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Submit</button>
        </div>
    </form>
</body>

